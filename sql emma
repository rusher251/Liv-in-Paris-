('Soupe √† l\'Oignon', 6.50, 'CU001'),
('Cassoulet', 13.00, 'CU001');

-- Insertion d'une commande de test pass√©e par le client
INSERT INTO Commandes (client_id, total) VALUES ('CL001', 45.00);

-- Insertion des lignes de commande (d√©tails de la commande)
